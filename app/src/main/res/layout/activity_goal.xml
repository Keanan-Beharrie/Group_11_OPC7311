<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img1"
        android:padding="4dp">


    <TextView
        android:id="@+id/tvNotes"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editNum1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="110dp"
        android:fontFamily="@font/poppins_bold"
        android:padding="@dimen/_10sdp"
        android:text="Total Hours Worked"
        android:textColor="@color/ColorWhite"
        android:textSize="@dimen/_20ssp" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_above="@+id/editNum1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="27dp"

        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"

        android:layout_marginBottom="57dp"
        android:background="@drawable/background"
        android:closeIcon="@drawable/ic_close"
        android:iconifiedByDefault="false"
        android:queryHint="Search Entry List"
        android:searchIcon="@drawable/ic_search"
        android:theme="@style/ThemeOverlay.search" />

    <TextView
        android:id="@+id/textResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editNum2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="-63dp"
        android:padding="5dp"
        android:text="Total Hours Worked"
        android:textColor="#fff"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
            android:id="@+id/editNum1"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
        <EditText
            android:id="@+id/editNum2"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editNum1"
            android:layout_centerInParent="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editNum2"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="133dp"
        android:onClick="addNumbers"
        android:text="Calculate" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editNum2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="152dp"
        android:layout_marginTop="149dp"
        android:layout_marginEnd="134dp"
        android:onClick="addNumbers"
        android:text="Create Entry" />

    <ImageView
        android:id="@+id/image_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_200"
        android:src="@drawable/shape"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    </RelativeLayout>